<!--**********orders-section**********-->
     <section class="menu container px-12 py-8">
         <h1 class="text-xl font-bold mb-8">All Jucies</h1>
         <div class="grid gap-x-12 gap-y-16 grid-cols-4">
             
            <!--information of jucies fetching from database 
                  like => image, name , size , price 
                which displaying on page --> 
             <% juices.forEach(function(juices){ %>

                <div class="w-64">
                    <img class="h-40 mb-4 mx-auto " src="/img/<%= juices.image%>" alt="">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg"><%= juices.name%></h2>
                        <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= juices.size%></span>
                        <div class="flex item-center justify-around mt-6">
                            <span class="font-bold text-lg">â‚¹<%= juices.price%></span>
                            <button data-juices="<%= JSON.stringify(juices) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center">
                                <span>+</span>
                                <span class="ml-4">Add</span>
                                
                            </button>
                        </div>
                    </div>
                 </div>

            <% }) %>


         </div>
         
     </section>
