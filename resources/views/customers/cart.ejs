<!--*******rendering details in cart section**********-->
<section class="cart" style="background-color: aliceblue;">
    <% if (session.cart){ %>
        <div class="order container">
            <div style="margin: 20px 10px" class="flex">
                <img width="30px" style="margin: 5px;" src="/img/cart-black.png" alt="cart1">
                <h1 style="font-size: 20px; font-weight: 600;">Order Summary</h1>
            </div>
            <div class="burger-list">
                <% for(let juices of Object.values(session.cart.items)){  %>
                <div class="flex items-center my-8">
                    <img style="width: 100px;" src="/img/<%= juices.items.image %>" alt="cart-list">
                    <div class=" flex-1 ml-4">
                        <h1 style="font-size: 20px;"><%= juices.items.name %></h1>
                        <span style="font-size: 15px;"><%= juices.items.size%></span>
                    </div>
                    <span class="flex-1" style="font-size: 20px;"><%= juices.qty %></span>
                    <span style="font-size: 20px;">â‚¹ <%= juices.items.price %></span>
                </div>
                <% } %>
    
            </div>
        </div>
            <hr>
            
    
            <div class="text-right">
                <div>
                    <span style="font-size: 20px; font-weight:600; margin-right:5px;">Total Amount :</span>
                    <span style="font-size: 20px; font-weight:600; margin-right:50px;">â‚¹ <%= session.cart.totalPrice %></span>
                </div>
                <% if(user) {%>
                <div>
                    <form action="/orders" method="POST" class="mt-12" style="flex-direction:column;">
                        <input name="phone"  class="border border-black  p-2 w-1/4 mt-4 mr-4" style="border-radius: 10px; padding: 7px 7px;" type="text" placeholder="Phone number">
                        <input name="address" class="border border-black p-2 w-1/4 mt-4 mr-4" style="border-radius: 10px; padding: 7px 7px;" type="text" placeholder="Address">
                        <button class="btn-primary px-6 py-2 text-white font-bold mt-4 mr-6" style="border-radius: 10px; padding: 9px 9px; background-color: #410056;"  type="submit">Order Now</button>
                    </form>
                </div>
              <% } else { %>
               <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-4 ">Login to continue</a>
           <% }%>
            </div>
        </div>

        <% } else{ %>
    <div class="empty-cart">
        <div class="container mx-auto text-center pb-2">
            <div class="py-6">
            <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
            <p>You probably haven't ordered anything yet.
                To order, go to main page.
            </p>
            </div>
            <img class="w-1/3 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
    </div> 
    <% } %>


</section>
