    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="icon" href="/img/hungry-vibe-logo" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
</head>
<body style=" background-color:aliceblue">
    <!-------------for---------navbar----------logo-------and----------links---->
    <nav>
        <div class="navbar-brand">
            <a href="/"><img src="/img//hungry-vibe-logo.png" alt="logo h"> </a>
        </div>
        <% if(user) { %>
        <div class="navbar-links">
        <ul class="items">
            <li><a href="#" class="link"><i class="fas fas fa-search"></i></a></li>
            <li>
                <a href="./cart" class="link">
                   <i class="fas fa-shopping-cart"></i>
                   <span style="color: darkorange; "><%= session.cart ? session.cart.totalQty : ' ' %></span>    
                </a>
            </li>
            <li class="dropdown">
                <a href="#" class="droplink link"><i class="fas fa-user-alt"></i></i></a>
                <div class="dropdown-content">
                    <a href="#">Profile</a>
                    <form  id="logout" action="/logout" method="POST">
                      <a onclick="document.getElementById('logout').submit()" href="#">Logout</a>
                    </form>
                </div>
            </li>
            <li class="dropdown">
                <a href="#" class="droplink link"><i class="fas fa-ellipsis-v"></i></a>
                  <div class="dropdown-content">
                  <a href="/menu">Menu</a>
                  <a href="/customers/orders">Orders</a>
                  <a href="/">About</a>
                  <a href="/contact">Contact</a>
                </div>
            </li>
        </ul>
        </div>
        <% } else { %>
            <div class="navbar-links">
                <ul class="items">
                    <li class="dropdown">
                        <a href="#" class="droplink link"><i class="fas fa-user-alt"></i></i></a>
                        <div class="dropdown-content">
                            <a href="/register">Register</a>
                            <a href="/login">Login</a>
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="droplink link"><i class="fas fa-ellipsis-v"></i></a>
                          <div class="dropdown-content">
                          <a href="/menu">Menu</a>
                          <a href="/">About</a>
                          <a href="/contact">Contact</a>
                        </div>
                    </li>
                </ul>
                </div>
                <% } %>


    </nav> 
 
    
  <%-body%> 

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>

